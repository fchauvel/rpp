{
    "parser": "@typescript-eslint/parser",
    "plugins": [
	"@typescript-eslint"
    ],
    "env": {
	"node": true,
	"es6": true
    },
    "extends": [
	"plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "semi": ["error", "always"],
	"quotes": ["error", "double"],
	"@typescript-eslint/no-unused-vars": [
	    "error",
	    {
		"vars": "all",
		"args": "none"
	    }
	],
	"@typescript-eslint/no-empty-function": [
	    "error",
	    {
		"allow": [
		    "arrowFunctions"
		]
	    }
	],
	"@typescript-eslint/no-explicit-any": [
	    "error",
	    {
		"ignoreRestArgs": true
	    }
	]
    }
}
